{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true
   },
   "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
   }
}