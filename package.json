{
	"name": "dhbw-node-ts",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.ts",
	"scripts": {
		"start": "nodemon",
		"start:prod": "NODE_ENV=production DEBUG=app:i* ts-node ./src/index.ts",
		"build": "NODE_ENV=production tsc src/index.ts",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"typeorm": "typeorm-ts-node-commonjs",
		"lint": "prettier . --check",
		"lint:fix": "prettier . --write"
	},
	"nodemonConfig": {
		"exec": "ts-node ./src/index.ts",
		"env": {
			"DEBUG": "*",
			"PORT": 13000,
			"NODE_ENV": "development"
		},
		"watch": [
			"./src/**/*.ts"
		],
		"ignore": [
			"src/**/*.spec.ts",
			"src/**/*.test.ts"
		]
	},
	"author": "",
	"license": "WTFPL",
	"devDependencies": {
		"@babel/core": "^7.24.4",
		"@babel/plugin-proposal-decorators": "^7.24.1",
		"@babel/preset-env": "^7.24.4",
		"@babel/preset-typescript": "^7.24.1",
		"@jest/globals": "^29.7.0",
		"@types/debug": "^4.1.12",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.12",
		"@types/node": "^22.15.14",
		"@types/supertest": "^6.0.2",
		"babel-jest": "^29.7.0",
		"debug": "^4.4.0",
		"jest": "^29.7.0",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"body-parser": "^2.2.0",
		"express": "^5.1.0",
		"reflect-metadata": "^0.2.2",
		"sqlite3": "^5.0.2",
		"typeorm": "^0.3.23"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": false,
		"bracketSpacing": false,
		"trailingComma": "all",
		"printWidth": 90,
		"arrowParens": "always"
	},
	"type": "commonjs"
}
